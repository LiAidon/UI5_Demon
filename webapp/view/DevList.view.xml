<mvc:View xmlns="sap.m" 
		  xmlns:core="sap.ui.core" 
		  xmlns:l="sap.ui.layout" 
		  xmlns:mvc="sap.ui.core.mvc"
		  controllerName="ADTracker.controller.DevList">
	<Table id="devList" backgroundDesign="Solid" growing="true" growingThreshold="50" growingScrollToLoad="false" class="sapUiTinyMarginTop"
		items="{ path : 'devmodel>/devItemsSet', sorter : { path : 'release', descending:true, group : true}, groupHeaderFactory: '.createGroupHeader' }">
		<headerToolbar>
			<Toolbar>
				<Title text="{i18n>devListTitle}"/>
				<ToolbarSpacer/>
				<SegmentedButton selectedKey="upcoming" select="onSegSelect">
					<items>
						<SegmentedButtonItem text="Incident / Task" key="incident"/>
						<SegmentedButtonItem text="My Items" key="mine"/>
						<SegmentedButtonItem text="Upcoming Items" key="upcoming"/>
						<SegmentedButtonItem text="FS Late Items" key="fslate"/>
						<SegmentedButtonItem text="All" key="all"/>
					</items>
				</SegmentedButton>
				<SearchField width="20%" search="onSearchDevList"/>
				<FacetFilter id="idFacetFilter" type="Simple" showPersonalization="false" showReset="false" liveSearch="false">
					<lists>
						<!--multiselect="true"-->
						<FacetFilterList title="Release" key="releaseKey" sequence="0" listClose="handleListClose" retainListSequence="true"
							showRemoveFacetIcon="false"
							items="{path: 'devmodel>/appConfigurationSet', filters:[{path:'Type', operator:'EQ',value1:'RELEASE'},{path:'Code', operator:'NE',value1:''},{ path: 'FilterKey', operator: 'EQ', value1: '03'}], sorter:{ path: 'Code' , descending:true}}">
							<items>
								<FacetFilterItem text="{devmodel>Value}" key="{devmodel>Code}"/>
							</items>
						</FacetFilterList>
						<FacetFilterList title="Status" key="overallStatus" sequence="1" listClose="handleListClose" retainListSequence="true"
							showRemoveFacetIcon="false"
							items="{path: 'devmodel>/appConfigurationSet', filters:[{path:'Type', operator:'EQ',value1:'STATUS'},{path:'Code', operator:'NE',value1:''}], sorter:{ path: 'Code' , descending:false}}">
							<items>
								<FacetFilterItem text="{devmodel>Value}" key="{devmodel>Code}"/>
							</items>
						</FacetFilterList>
					</lists>
				</FacetFilter>
				<Select class="sapUiSmallMarginEnd" id="groupSelect" change="onGroupChange" icon="sap-icon://group-2" type="IconOnly"
					selectedKey="{view>/groupBy}" autoAdjustWidth="true">
					<core:Item key="None" text="{i18n>GroupByNone}"/>
					<core:Item key="release" text="{i18n>GroupByRelease}"/>
					<core:Item key="overallStatus" text="{i18n>GroupByStatus}"/>
					<core:Item key="teamLead" text="{i18n>GroupByTeamLead}"/>
					<core:Item key="functionalAnalyst" text="{i18n>GroupByFA}"/>
					<core:Item key="developer" text="{i18n>GroupByDeveloper}"/>
				</Select>
				<Button tooltip="View Settings" icon="sap-icon://drop-down-list" press="onViewSetting" visible="false"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column width="1em">
				<Text text=""/>
			</Column>
			<Column width="7em">
				<Text text="{i18n>columnRelease}"/>
			</Column>
			<Column width="auto">
				<Text text="{i18n>columnWRWKNum}"/>
			</Column>
			<Column width="8em" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
				<Text text="{i18n>columnoverallStatus}"/>
			</Column>
			<Column width="10em" minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline">
				<Text text="{i18n>columnfunctionalAnalyst}"/>
			</Column>
			<Column width="10em" minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline">
				<Text text="{i18n>columntechLead}"/>
			</Column>
			<Column width="10em" minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline">
				<Text text="{i18n>columndeveloper}"/>
			</Column>
			<Column width="10em" minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline">
				<Text text="{i18n>columncodeReviewer}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem type="Navigation" press="onItemSelect">
				<cells>
					<ObjectStatus
						icon="{parts:[{path: 'devmodel>devApproach'},{path: 'devmodel>FSMileStoneDate'},{path: 'devmodel>FSPromiseDate'},{path: 'devmodel>FSReceiveDate'},{path: 'devmodel>FSLink'}], formatter: '.formatter.FSStatusIcon'}"
						text="{parts:[{path: 'devmodel>devApproach'},{path: 'devmodel>FSMileStoneDate'},{path: 'devmodel>FSPromiseDate'},{path: 'devmodel>FSReceiveDate'},{path: 'devmodel>FSLink'}], formatter: '.formatter.FSStatusText'}"
						state="{parts:[{path: 'devmodel>devApproach'},{path: 'devmodel>FSMileStoneDate'},{path: 'devmodel>FSPromiseDate'},{path: 'devmodel>FSReceiveDate'},{path: 'devmodel>FSLink'}], formatter: '.formatter.FSStatusState'}"
						tooltip="{parts:[{path: 'devmodel>devApproach'},{path: 'devmodel>FSMileStoneDate'},{path: 'devmodel>FSPromiseDate'},{path: 'devmodel>FSReceiveDate'},{path: 'devmodel>FSLink'}], formatter: '.formatter.FSStatusTooltip'}"/>
					<ObjectIdentifier title="{devmodel>release}" text="{devmodel>releaseDate}"/>
					<ObjectIdentifier title="{devmodel>WRWKNum}" text="{devmodel>description}"/>
					<ObjectStatus text="{path: 'devmodel>overallStatus', formatter: '.formatter.overallStatusText'}"
						tooltip="{path: 'devmodel>overallStatus', formatter: '.formatter.overallStatusText'}"
						state="{path: 'devmodel>overallStatus', formatter: '.formatter.overallStatusState'}"/>
					<Text text="{devmodel>faFName}"/>
					<Text text="{devmodel>techLeadFName}"/>
					<Text text="{devmodel>developerFName}"/>
					<Text text="{devmodel>codeReviewerFName}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>