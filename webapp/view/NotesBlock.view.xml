<core:View
	controllerName="ADTracker.controller.NotesBlock"
	xmlns="sap.suite.ui.commons"
	xmlns:m="sap.m"
	xmlns:core="sap.ui.core">
		<m:Toolbar>
			<m:ToolbarSpacer />
			<m:Button text="Add New Notes" press="onNewNote" type="Accept"/>
		</m:Toolbar>
		<Timeline
			id="idNotes"
			enableScroll="false"
			enableSocial="false"
			growing="false"
			growingThreshold="5"
			width="100%"
			showHeaderBar="false"
			showIcons="true"
			content="{}"
			sortOldestFirst="false"
			noDataText="No comments on this item">
			<content>
				<TimelineItem id="idNotesItem"
					dateTime = "{devmodel>Notedate} - {devmodel>Notetime}"
				   	userNameClickable = "false"
				   	text = "{devmodel>Note}"
					userName = "{devmodel>Noteby}"
					title="noted at"
					icon = "sap-icon://notes">
				</TimelineItem>
			</content>
		</Timeline>	
</core:View>