<mvc:View 
    controllerName="ADTracker.controller.DevItemCreate"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">
    <Page
        navButtonPress="onNavBack" 
        title="{i18n>CreateNewItemPageTitle}" 

        showNavButton="true">
        <content>
            <List id="newitemlist">
		        
		        <InputListItem
		          label="WK/WR number">  
		          <Input id="WRWKNum" placeholder="WR/WK number" enabled="true" liveChange="_onNumberLiveChange"/>
		        </InputListItem>
		        
		        <InputListItem
		          label="Description">  
		          <Input id="title" placeholder="Description" liveChange="_onNumberLiveChange"/>
		        </InputListItem>
		        
		        <InputListItem
		          label="Release">  
		          <Select id="release" forceSelection="false" change="_onReleaseChange"
			          items="{
			            path: '/appConfigurationSet',
			            filters: [{ path: 'Type', operator: 'EQ', value1: 'RELEASE'},{ path: 'FilterKey', operator: 'EQ', value1: '01'}],
			            sorter: { path: 'Code' }
			          }">
		          	<core:Item key="{Code}" text="{Value}"/>
			      </Select>
		        </InputListItem>
		        
		        <InputListItem label="* Release Date" visible="{view>/releaseDateVisible}">
	 		        <VBox>
						<DatePicker id="releaseDate" 
								  valueFormat="yyyy/MM/dd" 
								  displayFormat="long"
								  placeholder="YYYY/MM/DD"
								  editable= "true"  
								  change="_onNumberLiveChange">
						</DatePicker>
					</VBox>
		        </InputListItem>

 		        <InputListItem label="Development Approach">
		          <Select id="devApproach" forceSelection="false" 
				          items="{
					            path: '/appConfigurationSet',
					            filters: [{ path: 'Type', operator: 'EQ', value1: 'APPROACH'}]
					          }">
			        <core:Item key="{Code}" text="{Value}" />
			      </Select>
		        </InputListItem>
		        <InputListItem label="Dummy - FS Release Milestone Date" visible="false">  
		          <Select id="dummyReleaseMilestoneDate" forceSelection="false"
			          items="{
			            path: '/appConfigurationSet',
			            filters: [{ path: 'Type', operator: 'EQ', value1: 'MSDATE'}],
			            sorter: { path: 'Code' }
			          }">
		          	<core:Item key="{Code}" text="{Value}" />
			      </Select>
		        </InputListItem>
		        
 		        <InputListItem 
		          label="Priority">
		          <Select id="priority" enabled="true" forceSelection="false"
			          items="{
			            path: '/appConfigurationSet',
			            filters: [{ path: 'Type', operator: 'EQ', value1: 'PRIORITY'}],
			            sorter: { path: 'Code' }
			          }">
		          	<core:Item key="{Code}" text="{Value}" />
			      </Select>
		        </InputListItem>
		        
<!-- 		        <InputListItem 
		          label="SAP System">
		          <Select id="SAPSystem" enabled="true"
			          items="{
			            path: '/appConfigurationSet',
			            filters: [{ path: 'Type', operator: 'EQ', value1: 'SYS'}],
			            sorter: { path: 'Code' }
			          }">
		          	<core:Item key="{Code}" text="{Value}" />
			      </Select>
		        </InputListItem> -->
		        
<!-- 		        <InputListItem 
		          label="RICEF">
		          <Select id="RICEF" enabled="true"
			          items="{
			            path: '/appConfigurationSet',
			            filters: [{ path: 'Type', operator: 'EQ', value1: 'RICEF'}],
			            sorter: { path: 'Code' }
			          }">
		          	<core:Item key="{Code}" text="{Value}" />
			      </Select>
		        </InputListItem> -->
		        
<!-- 		        <InputListItem 
		          label="Estimate ABAP Dev Days">
		          <Input id="estimateABAPDays"
			        placeholder="Days"
			        type="Number"
			        enabled="true" />
		        </InputListItem> -->
		
		        <InputListItem label="RPC sharepoint" visible="false">
						<Link text="RPC sharepoint link" target="_blank" emphasized="true" href="{view>/RPCLink}" class="sapUiTinyMarginEnd"/>
				</InputListItem>
				
		        <InputListItem label="Release Milestone Date (Auto Determined)" >
	 		        <VBox>
						<DatePicker id="FSReleaseMilestoneDate" 
								  valueFormat="yyyy/MM/dd" 
								  displayFormat="long"
								  placeholder="YYYY/MM/DD"
								  enabled="{detailView>/generalUpdatableInfoEditable}"
								  change="onValueChange"
								  editable= "false" >
						</DatePicker>
					</VBox>
		        </InputListItem>
		        
		        <InputListItem label="FS Promise Date">
	 		        <VBox>
						<DatePicker id="FSPromiseDate" 
								  valueFormat="yyyy/MM/dd" 
								  displayFormat="long"
								  placeholder="YYYY/MM/DD"
								  enabled="{detailView>/generalUpdatableInfoEditable}"
								  change="onValueChange"
								  editable= "true" >
						</DatePicker>
					</VBox>
		        </InputListItem>
		        
		        <InputListItem label="FS Actual Receive Date">
			         <VBox>
				      <DatePicker id="FSActualReceiveDate" 
								  valueFormat="yyyy/MM/dd" 
								  displayFormat="long"
								  placeholder="YYYY/MM/DD"
								  enabled="{detailView>/generalUpdatableInfoEditable}"
								  change="onValueChange"
								  editable= "true" >
						</DatePicker>
					</VBox>
		        </InputListItem>

	          	<InputListItem 
		          label="FS Link">
		          <Input id="FSLink"
		          		 type="Url" 
				         placeholder="FS Link"
					     enabled="true" />
		        </InputListItem>

<!-- 		        <InputListItem 
		          label="Target Dev Complete Date">
		          <Input id="targetDevCompleteDate"
			        enabled="true" 
			        type="Date"/>
		        </InputListItem> -->

	          	<InputListItem label="Charge Code">
		          	<HBox alignItems="Center" justifyContent="End">
			          <Input id="NetworkNumber"
					         placeholder="Network"
						     enabled="true"
						     showValueHelp="true" 
						     valueHelpRequest="_onNetworkValueHelp" 
						     class="sapUiTinyMarginEnd"
						     />
			          <Input id="Activity"
					         placeholder="Activity"
						     enabled="true" 
						     showValueHelp="true" 
							valueHelpRequest="_onActivityValueHelp"/>
					</HBox>
		        </InputListItem>
		        
		        <InputListItem 
		          label="Functional Analyst">
		          <Select id="functionalAnalyst"  forceSelection="false"  icon="sap-icon://slim-arrow-down"
		          	items="{
		            path: '/userRolesSet',
		            filters: [{ path: 'role', operator: 'EQ', value1: 'Functional Analyst'}],
		            sorter: { path: 'lastName' }
		          }">
		          	<core:Item key="{userID}" text="{lastName}  {firstName}" />
			      </Select>
		        </InputListItem> 
		        
		        <InputListItem 
		          label="Team Lead">
		          <Select id="teamLead"  forceSelection="false"
		          	items="{
		            path: '/userRolesSet',
		            filters: [{ path: 'role', operator: 'EQ', value1: 'Team Lead'}],
		            sorter: { path: 'lastName' }
		          }">
		          	<core:Item key="{userID}" text="{lastName}  {firstName}" />
			      </Select>
		        </InputListItem> 

		        <InputListItem 
		          label="Technical Lead">
		          <Select id="techLead"  forceSelection="false"
		          	items="{
		            path: '/userRolesSet',
		            filters: [{ path: 'role', operator: 'EQ', value1: 'Tech Lead'}],
		            sorter: { path: 'lastName' }
		          }">
		          	<core:Item key="{userID}" text="{lastName}  {firstName}" />
			      </Select>
		        </InputListItem>  

		        <InputListItem 
		          label="ABAP Developer">
		          <Select id="Developer" forceSelection="false"
		          	items="{
		            path: '/userRolesSet',
		            filters: [{ path: 'role', operator: 'EQ', value1: 'Developer'}],
		            sorter: { path: 'lastName' }
		          }">
		          	<core:Item key="{userID}" text="{lastName}  {firstName}" />
			      </Select>
		        </InputListItem> 	
		        
		        <InputListItem 
		          label="Code Reviewer">
		          <Select id="codeReviewer" forceSelection="false"
		          	items="{
		            path: '/userRolesSet',
		            filters: [{ path: 'role', operator: 'EQ', value1: 'Code Reviewer'}],
		            sorter: { path: 'lastName' }
		          }">
		          	<core:Item key="{userID}" text="{lastName}  {firstName}" />
			      </Select>
		        </InputListItem> 

		        <InputListItem 
		          label="Current Status">
		          <Select id="CurrentStatus" enabled="true"  forceSelection="true"
			          items="{
			            path: '/appConfigurationSet',
						filters: [{ path: 'Type', operator: 'EQ', value1: 'STATUS'},
								  { path: 'Code', operator: 'EQ', value1: '00'},
								  { path: 'Code', operator: 'EQ', value1: '10'},
								  { path: 'Code', operator: 'EQ', value1: '11'},
								  { path: 'Code', operator: 'EQ', value1: '20'},
								  { path: 'Code', operator: 'EQ', value1: '30'},
								  { path: 'Code', operator: 'EQ', value1: '35'},
								  { path: 'Code', operator: 'EQ', value1: '40'},
								  { path: 'Code', operator: 'EQ', value1: '41'}],
			            sorter: { path: 'Code' }
			          }">
		          	<core:Item key="{Code}" text="{Value}" />
			      </Select>
		        </InputListItem>	          		          	          		          	          		           		          		          
		      </List>
        </content>
        <footer
            id="detailFooter">
            <Toolbar id="detailToolbar">
                <content>
                    <ToolbarSpacer />
                    <Button 
                    	id="saveButton"
                        press="onNewItem" 
                        type = "Accept"
                        text="Save"
                        icon="sap-icon://save">
                    </Button>
                </content>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>