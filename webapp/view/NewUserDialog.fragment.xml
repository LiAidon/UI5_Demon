	class="sapUiSizeCompact" >
   <Dialog
      title="Update User Infor">
      	<content>
			<List>
				<InputListItem label="APEX ID">
					<Input id="APEXID" placeholder="APEXID" value=""/>
				</InputListItem>
				<InputListItem label="Role">
					<Select id="Role">
						<core:Item key="Code Reviewer" text="Code Reviewer" />
						<core:Item key="Developer" text="Developer" />
						<core:Item key="Functional Analyst" text="Functional Analyst" />
						<core:Item key="Team Lead" text="Team Lead" />
						<core:Item key="Tech Lead" text="Tech Lead" />
					</Select>
				</InputListItem>
				<InputListItem label="First Name">
					<Input id="Firstname" placeholder="First Name" />
				</InputListItem>
				<InputListItem label="Last Name">
					<Input id="Lastname" placeholder="Last Nam" />
				</InputListItem>
				<InputListItem label="Telephone Number">
					<Input id="TelNo" placeholder="Telephone Number"/>
				</InputListItem>
				<InputListItem label="Mobile Phone Number">
					<Input id="Mobile" placeholder="Mobile Phone Number"/>
				</InputListItem>
			</List>      	
