<mvc:View
	controllerName="ADTracker.controller.FACommBlock"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<FeedInput 
		post="onPost"
		icon="../images/nopic.png"
		class="sapUiSmallMarginTopBottom" />
	<List
		showSeparators="Inner"
		items="{feed>/EntryCollection}" >
		<FeedListItem
			sender="{feed>Author}"
			icon="{feed>AuthorPicUrl}"
			senderPress="onSenderPress"
			iconPress="onIconPress"
			iconDensityAware="false"
			info="{feed>Type}"
			timestamp="{feed>Date}"
			text="{feed>Text}" />
	</List>
</mvc:View>