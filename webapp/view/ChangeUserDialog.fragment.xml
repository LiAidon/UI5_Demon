<core:FragmentDefinition
    xmlns:core="sap.ui.core" xmlns="sap.m"
	xmlns:smartForm="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	controllerName="sap.ui.comp.sample.smartform.SmartForm" 
	class="sapUiSizeCompact" >
   <Dialog
      title="Update User Infor">
      	<content>
			<List id="smartForm">
				<InputListItem label="APEX ID">
					<Input id="APEXID1" value="{devmodel>userID}" editable="false"/>
				</InputListItem>
				<InputListItem label="Role">
					<Input id="Role1" value="{devmodel>role}" editable="false"/>
				</InputListItem>
				<InputListItem label="First Name">
					<Input id="Firstname1" value="{devmodel>firstName}" />
				</InputListItem>
				<InputListItem label="Last Name">
					<Input id="Lastname1" value="{devmodel>lastName}" />
				</InputListItem>
				<InputListItem label="Telephone Number">
					<Input id="TelNo1" value="{devmodel>telephone}"/>
				</InputListItem>
				<InputListItem label="Mobile Phone Number">
					<Input id="Mobile1" value="{devmodel>mobilephone}"/>
				</InputListItem>
			</List>      	
		</content>
		<buttons>
			<Button
	            icon="sap-icon://save"
	            text="Save"
	            type="Accept"
	            press="onSaveUserDialog"/>
	       <Button
	            icon="sap-icon://delete"
	            text="Delete"
	            type="Emphasized"
	            press="onDeleteUserDialog"/>
	       <Button
	           icon="sap-icon://decline"
	           text="Cancel"
	           type="Reject"
	           press="onCancelUserDialog"/>
		</buttons>
   </Dialog>
</core:FragmentDefinition>