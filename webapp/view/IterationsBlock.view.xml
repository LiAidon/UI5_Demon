<mvc:View
	controllerName="ADTracker.controller.IterationsBlock"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Table id="idIterations"
		inset="false"
		items="{}">
		<columns>
			<Column
				width="12em">
				<Text text="Iteration Type" />
			</Column>
			<!--<Column-->
			<!--	minScreenWidth="Tablet"-->
			<!--	demandPopin="true">-->
			<!--	<Text text="Reason" />-->
			<!--</Column>-->
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Description" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Comments" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Created By" />
			</Column>
			<Column>
				<Text text="Created At" />
			</Column>
		</columns>
		<items>
			<ColumnListItem id="idIterationsItem">
				<cells>
					<ObjectIdentifier
						title="{devmodel>iterationtype}"
						text = "{
								path: 'devmodel>iterationtype',
								formatter: '.formatter.itrTypeText'
								}"/>
					<!--<Text-->
					<!--	text="{devmodel>reason}" />-->
					<Text
						text="{devmodel>Itrdesc}" />
					<Text
						text="{devmodel>comments}" />
					<Text
						text="{devmodel>Zzname}" />
					<Text
						text="{devmodel>Zzdate} - {devmodel>Zztime}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>