<core:FragmentDefinition
    xmlns:core="sap.ui.core" 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns:h="http://www.w3.org/1999/xhtml">
			<TableSelectDialog
				noDataText="No item Found"
				title="Select Network and Activity"
				contentWidth="60em"
				contentHeight="auto"
				multiSelect="false"
				growingThreshold="10"
				rememberSelections="false"
				search="_handleNetworkHelpSearch"
				confirm="_handleNetworkHelpConfirm"
				cancel="_handleNetworkHelpClose"
				items="{path : '/networkActivityHelpSet'}">
				<columns>
					<Column hAlign="Left" minScreenWidth="Tablet"
							demandPopin="true" >
							<Text text="Network" />
					</Column>
 					<Column minScreenWidth="Tablet"
							demandPopin="true" >
							<Text text="Activity" />
					</Column>
					<Column minScreenWidth="Tablet"
							demandPopin="true" width="5em">
							<Text text="Company" />
					</Column>
					<Column minScreenWidth="Tablet"
							demandPopin="true" width="3em">
							<Text text="Plant" />
					</Column>
					<Column minScreenWidth="Tablet"
							demandPopin="true">
							<Text text="Project" />
					</Column>
					<Column minScreenWidth="Tablet"
							demandPopin="true">
							<Text text="Responsible person" />
					</Column>
				</columns>		
				<ColumnListItem>
					<cells>
						<ObjectIdentifier title="{NetworkNumber}" text="{NetworkDescription}"/>
						<ObjectIdentifier title="{ActivityNumber}" text="{ActivityDescription}" />
						<Text text="{CompanyCode}" />
						<Text text="{Plant}" />
						<ObjectIdentifier title="{ProjectNumber}" text="{ProjectDescription}" />
						<Text text="{ResponsiblePerson}" />
					</cells>
				</ColumnListItem>

			</TableSelectDialog>
	
</core:FragmentDefinition>